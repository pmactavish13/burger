<div id="container">
    <h1 class="display-4">EAT-DA-BURGER</h1>
    <div class="row">

        <div class="col-sm-3" id="burgerEat">
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    <p>{{this.burger_name}}</p>
                    <button class="btn btn-sm" type="submit" id="devour">Devour</button>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-sm-6" id="burgerOrder">
            <div>
                <img class="card-img-top" src="/assets/img/burger.png" alt="Burger Image">
            </div>
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="input">Enter the name of the burger you would like to eat.</label>
                    <input type="text" name="burger_name" class="form-control" id="burgerName" placeholder="Burger Name">
                </div>

                <button class="btn btn-lg" type="submit">Make your Burger</button>
            </form>
        </div>

        <div class="col-sm-3" id="burgerAte">
            <h4>Consumption Tracker</h4>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>

    </div>
</div>